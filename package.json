{
  "name": "meeting-minutes-app",
  "version": "1.2.1",
  "description": "自动会议纪要桌面应用",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.meetingminutes.app",
    "productName": "AutoMeetingRecorder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "audio_files",
        "to": "audio_files"
      }
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}-linux.${ext}",
      "category": "Office"
    },
    "publish": null
  }
}
